{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*",
        "./src/app/*"
      ],
      "@backend": [
        "../backend/src/index"
      ],
      "@backend/*": [
        "../backend/src/*"
      ],
      "@shared": [
        "../shared/src/index"
      ],
      "@shared/*": [
        "../shared/src/*"
      ]
    },
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/main.tsx",
    "src/vite.config.ts",
    "src/tsconfig.node.json",
    "src/tsconfig.json"
  ]
}

